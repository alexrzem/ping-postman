					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"UseCaseSAMLIdPPolicy\",\n  \"description\": \"A sign-on policy for a SAML identity provider.\"\n}"
				},
				"url": {
					"raw": "{{apiPath}}/environments/{{envID}}/signOnPolicies",
					"host": [
						"{{apiPath}}"
					],
					"path": [
						"environments",
